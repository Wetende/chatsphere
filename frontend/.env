# Environment configuration for ChatSphere frontend

# API Base URL - the backend server address
# For local development with npm run dev
VITE_API_BASE_URL=http://localhost:8000/api

# Base URL for the app
VITE_BASE_URL=/

# Enable or disable authentication for development
VITE_AUTH_ENABLED=true

# Default language
VITE_DEFAULT_LANG=en

# Enable or disable chat history
VITE_ENABLE_CHAT_HISTORY=true

# Application theme (light/dark)
VITE_DEFAULT_THEME=light

# Token name for local storage
VITE_TOKEN_NAME=chatsphere_token

# Node environment
NODE_ENV=development